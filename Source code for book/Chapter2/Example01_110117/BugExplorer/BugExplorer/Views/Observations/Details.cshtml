@model BugExplorer.Models.Observation
@{
    ViewData["Title"] = "Details";
}
<div ng-app="bugApp" keep-alive>
    <div ng-controller="bugController">
        <h2>Details</h2>
        <div>
            <h4>Observation</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.StateOrProvince)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StateOrProvince)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CountyOrRegion)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CountyOrRegion)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Site)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Site)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Remarks)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Remarks)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Bug)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Bug.ID)
                </dd>
                @foreach (var item in Model.Photos)
                {
                    var imageFile = "/Images/" + item.ID + ".jpg";
                    <dd>
                        <img src="@imageFile" />
                    </dd>
                }
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>